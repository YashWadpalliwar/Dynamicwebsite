<%- include('./partials/header.ejs'); %>

  <div class="form ">

    <div class="container py-5">
      <header>

        <h1 class="text-center rounded-pill bg-primary text-light display-5 py-2"><b>Blogging</b></h1>

      </header>
      <section class="container my-2 bg-dark text-light rounded py-2">
        <form class="row g-3 p-5" action="/compose-blog" method="post">
          <div class="col-md-4">
            <label for="validationDefault01" class="form-label">First name</label>
            <input type="text" class="form-control" id="validationDefault01" placeholder="Enter Name" name="First_name" required>
          </div>
          <div class="col-md-4">
            <label for="validationDefault02" class="form-label">Last name</label>
            <input type="text" class="form-control" id="validationDefault02" placeholder="Last Name" name="Last_name"
              required>
          </div>
          <div class="col-md-4">
            <label for="validationDefaultUsername" class="form-label">Username</label>
            <div class="input-group">
              <span class="input-group-text" id="inputGroupPrepend2">@</span>
              <input type="text" class="form-control" id="validationDefaultUsername" name="User_ID"
                aria-describedby="inputGroupPrepend2" placeholder="Enter UserName" required>
            </div>
          </div>
          <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Enter EmailID" name="Email" required>
          </div>
          <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword4" placeholder="Enter Password" name="Password" required>
          </div>
          <div class="col-12">
            <label for="inputAddress" class="form-label">Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="Enter Address" name="Address_name" required>
          </div>
          <div class="col-12">
            <label for="inputAddress2" class="form-label">Address 2</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor"
              name="Address2_name">
          </div>
          <div class="col-md-6">
            <label for="inputCity" class="form-label">City</label>
            <input type="text" class="form-control" id="inputCity" placeholder="Enter City Name" name="City_name" required>
          </div>
          <div class="col-md-4">
            <label for="inputState" class="form-label">Interest</label>
            <select id="inputState" class="form-select" name="Interest" required>
              <option selected>Choose...</option>
              <option value="social">Social</option>
              <option value="Political">Political</option>
              <option value="sports">Sports</option>
              <option value="news">News</option>
              <option value="other">Other</option>

            </select>
          </div>
          <div class="col-md-2">
            <label for="inputZip" class="form-label">Pin Code</label>
            <input type="text" class="form-control" name="PinCode" id="inputZip" required>
          </div>
          <div class="col-12 " id="btnsub">
            <button type="submit" render class="btn1">Submit</button>
          </div>
        </form>
      </section>
    </div>
  </div>

  <%- include('./partials/footer.ejs'); %>